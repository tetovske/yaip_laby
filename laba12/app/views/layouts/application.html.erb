<!DOCTYPE html>
<html>
  <head>
    <title>Laba8</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>

  <body>
    <div class="d-flex flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <div class="logo m-auto">
        <%= link_to 'Дружественные числа!', root_path, :class => 'default-link' %>
      </div>
      <div class="pull-right">
        <% unless @current_user.nil? %>
          <%= link_to 'Выйти', signout_path, :class => 'button-def' %>
        <% else %>
          <%= link_to 'Зарегистрироваться', new_user_path, :class => 'button-def' %>
        <% end %>
      </div>
    </div>
    <div class="page">
      <div id="insertion">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
